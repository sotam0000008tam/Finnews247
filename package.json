{
  "name": "finnews-complete",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",

    "presitemap": "node -e \"const fs=require('fs'),p='public';if(fs.existsSync(p)){for(const f of fs.readdirSync(p)){if(/^sitemap(.*)\\.xml(\\.gz)?$/i.test(f)){try{fs.rmSync(p+'/'+f,{force:true})}catch{}}}}\"",
    "sitemap": "next-sitemap",
    "postbuild": "npm run sitemap",

    "check:links": "start-server-and-test \"next start -p 3000\" http://localhost:3000 \"linkinator http://localhost:3000 --recurse --timeout 15000 --concurrency 10 --skip '^mailto:|^tel:|#|\\\\.pdf($|\\\\?)|/api/|^javascript:' --format json --silent > link-report.json\"",
    "check:sidebar": "start-server-and-test \"next start -p 3000\" http://localhost:3000 \"node scripts/check-sidebar-links.mjs\"",
    "precheck:links": "npm run build",
    "precheck:sidebar": "npm run build"
  },
  "dependencies": {
    "lucide-react": "^0.543.0",
    "next": "13.5.6",
    "next-seo": "^6.8.0",
    "next-themes": "^0.4.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-fast-marquee": "^1.3.6",
    "swr": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "24.9.2",
    "@types/react": "19.2.2",
    "autoprefixer": "^10.4.21",
    "cheerio": "^1.0.0-rc.12",
    "linkinator": "^4.1.1",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "start-server-and-test": "^2.0.7",
    "tailwindcss": "^3.4.17",
    "typescript": "5.9.3"
  }
}
